<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" version="6.0" method="upgrade">
	<name>magnum</name>
	<creationDate>2026-02-08</creationDate>
	<author>Vitalii Magnum</author>
	<authorEmail>vitaliy1984@gmail.com</authorEmail>
	<authorUrl>https://www.magnumblog.space</authorUrl>
	<copyright>Copyright (C) 2005 - 2026</copyright>
	<license>MIT</license>
	<version>6.0.1</version>
	<targetplatform name="joomla" version="6.0" />
	<description>TPL_MAGNUM_DESC</description>
	<inheritable>1</inheritable>

	<files>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
	</files>
	<media destination="templates/site/magnum" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>fonts</folder>
	</media>
    <!-- Позиції модулів у шаблоні -->
	<positions>
		<position>top-menu</position>
		<position>left</position>
		<position>footer</position>
		<position>debug</position>
	</positions>

	<!-- Встановлення та видалення файлів мовних констант -->
    <languages folder="language">
        <language tag="uk-UA">uk-UA/tpl_magnum.ini</language>
        <language tag="uk-UA">uk-UA/tpl_magnum.sys.ini</language>
	</languages>

    <!-- Вивід параметрів в адміністративній частині шаблону -->
    <config>
        <fields name="params">
            <fieldset name="TPL_GOOGLE_ANALYTICS" >
                <field 
                name="analytics"
					type="textarea"
					rows="15"
					cols="25"
					default=""
					filter="raw"
					label="TPL_ANALYTICS"
					description="TPL_ANALYTICS_DESC"
				/>
            </fieldset>
			<fieldset name="TPL_LOGO" >
                <field
                    name="logoFile"
                    type="radio"
                    default="images/logo.png"
                    label="TPL_MAGNUM_LOGO_LABEL"
                    description="TPL_MAGNUM_LOGO_DESC"
                >
                    <option value="images/logo.png">TPL_MAGNUM_LOGO_OPTIONS_MAIN</option>
                    <option value="images/christmas-logo.png">TPL_MAGNUM_LOGO_OPTIONS_CHRISTMAS</option>
                </field>
                <field
                    name="backgroundFon"
                    type="radio"
                    default="main-fon"
                    label="TPL_MAGNUM_FON_LABEL"
                    description="TPL_MAGNUM_FON_DESC"
                >
                    <option value="main-fon">TPL_MAGNUM_FON_OPTIONS_MAIN</option>
                    <option value="christmas-fon">TPL_MAGNUM_FON_OPTIONS_CHRISTMAS</option>
                </field>
            </fieldset>
        </fields>
    </config>
	<!-- Параметри серверу оновлення шаблону -->
    <updateservers>
        <server type="extension" priority="1" name="magnum-template-updates">https://www.magnumblog.space/template_udpate.xml</server>
    </updateservers>
</extension>
